extends base

block content
  main.main
    .login-form
      h2.ma-bt-lg
        span.heading-secondary review for #{tour.name}
      form#review-form.form
        input#tour-id(type="hidden" value=tour.id)
        input#tour-slug(type="hidden" value=tour.slug)
        .form__group
          label.form__label(for='review') Review
          input#review.form__input(type='text', placeholder='Review', required)
        .form__group
          label.form__label(for='rating') Rating
          select#rating( required ).form__select
            option(value="1") 1
            option(value="2") 2
            option(value="3") 3
            option(value="4" selected) 4
            option(value="5") 5
        .form__group
          button.btn.btn--green(type='submit') Submit Review

block footer
  script(src='/js/review.js')
